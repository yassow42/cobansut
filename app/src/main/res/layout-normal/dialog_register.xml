<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_profile">

    <EditText
        android:id="@+id/etSifreLoginAlertDialog"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edit_text_mavi"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:textColorHint="@color/soluk_mavi"
        app:layout_constraintEnd_toEndOf="@+id/etKullaniciAdiLoginAlertDialog"
        app:layout_constraintStart_toStartOf="@+id/etKullaniciAdiLoginAlertDialog"
        app:layout_constraintTop_toBottomOf="@+id/etKullaniciAdiLoginAlertDialog" />

    <EditText
        android:id="@+id/etKullaniciAdiLoginAlertDialog"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_edit_text_mavi"
        android:ems="10"
        android:hint="Kullanıcı Adı"
        android:inputType="textPersonName"
        android:textColorHint="@color/soluk_mavi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnRegisterAlertDialog"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_btn_text_beyaz"
        android:text="Kayıt Ol"
        android:textAlignment="center"
        android:textColor="@color/mavi"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etSifreLoginAlertDialog"
        app:layout_constraintStart_toStartOf="@+id/etSifreLoginAlertDialog"
        app:layout_constraintTop_toBottomOf="@+id/etSifreLoginAlertDialog" />

</androidx.constraintlayout.widget.ConstraintLayout>